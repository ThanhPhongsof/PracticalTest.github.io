@model  System.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - HVNET.Products</title>
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <!--basic styles-->
    <link href="@Url.Content("~/Scripts/assets/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/assets/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/font-awesome.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-fonts.css")" />
    <!--ace styles-->
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-responsive.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-skins.min.css")" />
    <script src="@Url.Content("~/Scripts/assets/js/ace-extra.min.js")"></script>
    <style>
        label#recaptcha-anchor-label {
            font-size: 12px !important;
        }
    </style>
</head>

<body class="login-layout" style="background: #30A6E4;">
    <div class="main-container container-fluid">
        <div class="main-content">
            <div class="row-fluid">
                <div class="span12">
                    <div class="login-container">
                        <div class="space-20"></div>

                        <div class="row-fluid">
                            <div class="position-relative">
                                <div id="login-box" class="login-box visible widget-box no-border" style="padding:0;background-color:#f0f0f0">
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <div class="space-6"></div>
                                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <fieldset>
                                                    <label>
                                                        <div style="color:red">
                                                            @Html.ValidationSummary()
                                                        </div>
                                                        <span class="block input-icon input-icon-right">

                                                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "span12" })
                                                            @Html.ValidationMessageFor(m => m.UserName) <i class="icon-user"></i>
                                                        </span>
                                                    </label>

                                                    <label>
                                                        <span class="block input-icon input-icon-right">
                                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "span12" })
                                                            @Html.ValidationMessageFor(m => m.Password) <i class="icon-lock"></i>
                                                        </span>
                                                    </label>

                                                    <div class="row-fluid">
                                                        <input type="submit" value="Login" class="span12 btn" style="background-color:#f79433 !important;color:white !important;border:none !important;" />
                                                    </div>
                                                </fieldset>
                                            }
                                            <div class="space-2"></div>
                                        </div><!--/widget-main-->
                                    </div><!--/widget-body-->
                                </div><!--/login-box-->
                            </div><!--/position-relative-->
                        </div>
                        <div class="space-4"></div>
                        <div class="row-fluid">
                            <div class="center">
                                <p style="color:white">
                                    &copy;BGPortal
                                </p>
                            </div>
                        </div>
                    </div>
                </div><!--/.span-->
            </div><!--/.row-fluid-->
        </div>
    </div><!--/.main-container-->
    <!--basic scripts-->
    <!--[if !IE]>-->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/Scripts/assets/js/jquery-2.0.3.min.js")'>" + "<" + "/script>");
    </script>
    <script type="text/javascript">
        if ("ontouchend" in document)
            document.write("<script src='@Url.Content("~/Scripts/assets/js/jquery.mobile.custom.min.js")'>" + "<" + "/script>");
    </script>
    <script src="@Url.Content("~/Scripts/assets/js/bootstrap.min.js")"></script>
    <!--page specific plugin scripts-->
    <!--ace scripts-->
    <script src="@Url.Content("~/Scripts/assets/js/ace-elements.min.js")"></script>
    <script src="@Url.Content("~/Scripts/assets/js/ace.min.js")"></script>
    <!--inline scripts related to this page-->
    <script type="text/javascript">
        function show_box(id) {
            jQuery('.widget-box.visible').removeClass('visible');
            jQuery('#' + id).addClass('visible');
        }
    </script>
</body>
</html>